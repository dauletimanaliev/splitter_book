# AI Book Splitter & Designer - Environment Variables Example
# Скопируйте этот файл в .env и настройте под свои нужды

# API настройки
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Пути к файлам
UPLOAD_DIR=uploads
OUTPUT_DIR=output
TEMP_DIR=temp

# Максимальный размер файла (в байтах)
MAX_FILE_SIZE=52428800  # 50MB

# Поддерживаемые форматы
ALLOWED_EXTENSIONS=pdf,docx,epub

# CORS настройки
CORS_ORIGINS=*
CORS_CREDENTIALS=True

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# AI настройки (если используется внешний AI сервис)
# OPENAI_API_KEY=your_openai_api_key_here
# AI_MODEL=gpt-3.5-turbo

# База данных (если будет добавлена в будущем)
# DATABASE_URL=sqlite:///./app.db
# DATABASE_ECHO=False

# Кэширование
# REDIS_URL=redis://localhost:6379

# Безопасность
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email настройки (для уведомлений)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
